{
  "title": "Andrew's modifications",
  "rules": [
    {
      "description": "left command to left control",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.vmware\\.fusion$"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "left_command"
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "type": "basic"
        }
      ]
    },
